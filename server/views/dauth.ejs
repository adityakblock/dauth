<html>

<head>
	<title> DAuth </title>
	<link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.0/css/bootstrap.min.css"
		integrity="sha384-9gVQ4dYFwwWSjIDZnLEWnxCjeSWFphJiwGPXr1jddIhOegiu1FwO5qRGvFXOdJZ4" crossorigin="anonymous">
	<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>
	<script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.0/umd/popper.min.js"
		integrity="sha384-cs/chFZiN24E4KMATLdqdvsezGxaGsi4hLGOzlXwp5UZB1LY//20VyM2taTB4QvJ"
		crossorigin="anonymous"></script>
	<script src="https://stackpath.bootstrapcdn.com/bootstrap/4.1.0/js/bootstrap.min.js"
		integrity="sha384-uefMccjFJAIv6A+rW+L4AHf99KvxDjWSu1z9VI8SKNVmz4sk7buKt/6v9KI65qnm"
		crossorigin="anonymous"></script>
	<link rel="stylesheet" href="//cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/toastr.min.css" />
	<script src="//cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/toastr.min.js"></script>
	<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
	<script src="https://cdnjs.cloudflare.com/ajax/libs/crypto-js/3.1.9/crypto-js.js"></script>
	<script src="/javascripts/rollups/sha256.js"></script>

</head>


<body style="margin:0;padding:0">
	<img style="position:fixed;width:100%;height:100%;object-fit: cover" src="/images/bg.jpg" />
	<div class="card text-white bg-dark mb-3" style="width:90%; max-width:600px;height:90%; margin:auto; top: 5%;">
		<div class="card-header">DAuth</div>
		<div class="card-body">
			<h5 class="card-title">Login</h5>
			<div class="form-group">
				<label for="username">Username</label>
				<input style="background:#303030;color:#eeeeee" class="form-control" id="username"
					value="<%= username %>" readonly>
			</div>
			<div class="form-group">
				<label for="password">Password</label>
				<input type="password" style="background:#303030;color:#eeeeee" class="form-control" id="password"
					placeholder="Choose a password">
			</div>
			<center>
				<button id="login" onClick="login()" type="submit" class="btn btn-lg btn-outline-primary">Login</button>
			</center>
		</div>
	</div>
	<script>
		function login() {
			console.log("Login at dauth.ejs starting");
			var url = new URL(window.location.href);
			var redirect = url.searchParams.get("redirect");
			var code = Math.ceil(Math.random() * 1000);
			var username = "<%= username %>";
			var password = $("#password").val();
			var token = CryptoJS.SHA256(code.toString() + CryptoJS.SHA256(password).toString()).toString();
			window.location.href = redirect + "?code=" + code + "&hashcode=" + token + "&username=" + username;
			console.log("Login at dauth.ejs done");
		}
	</script>

</body>


</html>